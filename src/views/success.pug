extends base
block append head
    style.
        .success {
            max-width: 45rem;
            margin: 5rem auto;
            background-color: #e6fcf5;
            color:#099268;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight:500;
        }
        .divider {
            display:block;
            width:100%;
            height: 1px;
            background-color: #38d9a9;
            margin: 1rem 0;
        }
        .success-title {
            font-size:2.4rem;
            font-weight: bold;
        }
        .success-text{
            font-size: 1.8rem
        }
block content
    .success
        p.success-title Thank you for your Purchase!
        span.divider 
        p.success-text Your card has been charged and your reservation is confirmed.
        br
        p.success-text Booked Tour : #{tour}